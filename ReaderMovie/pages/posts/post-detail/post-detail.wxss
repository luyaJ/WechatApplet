.post-detail-container{
  display: flex;
  flex-direction: column;
}

.headImg{
  height: 460rpx;
  width: 100%;
}

.author-data{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.txt{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}
 
.time{
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #999;
} 

.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-left: 20rpx;
}

.circleImg{
  float: right;
  margin-left: 40rpx;
  vertical-align: middle;
}

.circleImg image{
  width: 90rpx;
  height: 90rpx;
}

.shareImg{
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.musicStart{
  position: absolute;
  top: 180rpx;
  left: 50%;
  margin-left: -51rpx;
  height: 110rpx;
  width: 102rpx;
  opacity: 0.6;
}